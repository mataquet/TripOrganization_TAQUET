@model TripOrganization_TAQUET.Models.Trips
@{
    ViewData["Title"] = "Delete the trip";
}

<div class="container">
    <h2 class="mb-4">Confirm deletion</h2>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this journey ?</h4>
        <p>This action can't be undone.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Trips' details'</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Departure</dt>
                <dd class="col-sm-9">@Model.Departure - @Model.DepartureDate.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Destination</dt>
                <dd class="col-sm-9">@Model.Arrival - @Model.ArrivalDate.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price €</dd>

                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">@Model.Capacity personnes</dd>

                <dt class="col-sm-3">Participants</dt>
                <dd class="col-sm-9">@(Model.participants != null ? Model.participants.Count : 0) registered</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-3">
            <a asp-action="Upcoming" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>