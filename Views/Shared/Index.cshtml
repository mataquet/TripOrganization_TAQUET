@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card border-0 shadow">
                <div class="row g-0">
                    <div class="col-md-6 bg-primary text-white p-4">
                        <div class="p-4">
                            <h3 class="fw-bold">Already member ?</h3>
                            <p class="mb-4">Sign in to access your personal space and manage your trips.</p>
                            <a asp-controller="User" asp-action="Login" class="btn btn-light text-primary fw-bold px-4">Sign in</a>
                        </div>
                    </div>
                    <div class="col-md-6 p-4">
                        <div class="p-4">
                            <h3 class="fw-bold">New here ?</h3>
                            <p class="mb-4">Create your account in few clicks and begin to plan a new journey.</p>
                            <a asp-controller="User" asp-action="Register" class="btn btn-primary fw-bold px-4">Sign up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>